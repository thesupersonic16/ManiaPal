<Window x:Class="ManiaPal.HedgeMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManiaPal"
        mc:Ignorable="d"
        Title="" Height="240" Width="500" WindowStartupLocation="CenterScreen" Style="{DynamicResource HedgeWindow}">
    <Window.Resources>
                <ResourceDictionary Source="Theme.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="36"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Header" Text="HEADER" FontSize="30" Foreground="#0066CC" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="0"/>
        <TextBlock x:Name="Message" Width="Auto" Foreground="White" Text="TEXT" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,0,5,0" Grid.Row="1" FontSize="20"/>
        <StackPanel x:Name="Stack" Margin="-4" Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{StaticResource HMM.Window.DialogBottom}">
        </StackPanel>
    </Grid>
</Window>
